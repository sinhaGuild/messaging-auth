// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  profile   Profile

  authoredKudos Kudo[] @relation("AuthoredKudos")
  kudos         Kudo[] @relation("ReceivedKudos")
}

model Kudo {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  message     String
  createdAt   DateTime   @default(now())
  style       KudoStyle?
  author      User?      @relation(fields: [authorId], references: [id], "AuthoredKudos")
  authorId    String?    @db.ObjectId
  recipient   User?      @relation(fields: [recipientId], references: [id], "ReceivedKudos")
  recipientId String?    @db.ObjectId
}

type Profile {
  firstName String
  lastName  String
  department Department? @default(MARKETING)
}

type KudoStyle {
  backgroundColor Color @default(YELLOW)
  textColor       Color @default(WHITE)
  emoji           Emoji @default(THUMBSUP)
}

// ENUMS

enum Emoji {
  THUMBSUP
  PARTY
  HANDSUP
}

enum Department {
  MARKETING
  SALES
  ENGINEERING
  HR
}

enum Color {
  RED
  GREEN
  YELLOW
  BLUE
  WHITE
  BLACK
}